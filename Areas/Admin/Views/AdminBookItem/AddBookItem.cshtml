

@model BookItemAndBookCategoriesViewModel



    <!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-9 col-12 mb-2">
                    <div class="row breadcrumbs-top">
                        <div class="col-12">
                            <h2 class="content-header-title float-left mb-0">Form Layouts</h2>
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="index.html">Home</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#">Forms</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        <a href="#">Form Layouts</a>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-header-right text-md-right col-md-3 col-12 d-md-block d-none">
                    <div class="form-group breadcrum-right">
                        <div class="dropdown">
                            <button class="btn-icon btn btn-primary btn-round btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="feather icon-settings"></i></button>
                            <div class="dropdown-menu dropdown-menu-right"><a class="dropdown-item" href="#">Chat</a><a class="dropdown-item" href="#">Email</a><a class="dropdown-item" href="#">Calendar</a></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-body">
                <!-- Basic Horizontal form layout section start -->
                <section id="basic-horizontal-layouts">
                    <div class="row match-height">
                        <div class="col-md-12 col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Horizontal Form</h4>
                                </div>
                                <div class="card-content">
                                    <div class="card-body">

                                        @Html.ValidationSummary()
                                        <!--FORM START-->
                                        <form class="form form-horizontal"
                                              method="post" role="form"
                                              enctype="multipart/form-data"
                                              asp-controller="AdminBookItem" asp-action="SaveBookItem">
                                            <div class="form-body">
                                                <div class="row">
                                                    <!--Name-->
                                                    <div class="col-12">
                                                        <div class="form-group row">
                                                            <div class="col-md-4">
                                                                <span>Book Name</span>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <input type="text" class="form-control" placeholder="Book Name" asp-for="bookItem.bookItemName">
                                                                <span class="label danger" asp-validation-for="bookItem.bookItemName"></span>

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--Image -->
                                                    <div class="col-12">
                                                        <div class="form-group row">
                                                            <div class="col-md-4">
                                                                <span>Book's'Image</span>
                                                            </div>
                                                           
                                                            <div class="col-md-12">
                                                                <input  type="hidden" asp-for="bookItem.bookItemImageName" class="form-control"></input>
                                                                <input asp-for="bookItem.bookItemImageName" type="file" name="Files" class="form-control">

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--Category-->
                                                    <div class="col-12">
                                                        <div class="form-group row">
                                                            <div class="col-md-4">
                                                                <span>Category</span>
                                                            </div>
                                                            <div class="col-md-12">

                                                                <select class="form-control"
                                                                        asp-for="bookItem.bookCategoryId"
                                                                        asp-items="@(new SelectList(Model.bookCategories,nameof(BookCategory.bookCategoryId),nameof(BookCategory.bookCategoryName)))">
                                                                </select>
                                                                <span class="label danger" asp-validation-for="bookItem.bookCategoryId"></span>
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <!--Sales Price-->
                                                    <div class="col-12">
                                                        <div class="form-group row">
                                                            <div class="col-md-4">
                                                                <span>Sales Price</span>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <input type="number" class="form-control" placeholder="Sales Price" asp-for="bookItem.salesPrice">
                                                                <span class="label danger" asp-validation-for="bookItem.salesPrice"></span>

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--Purchase Price-->
                                                    <div class="col-12">
                                                        <div class="form-group row">
                                                            <div class="col-md-4">
                                                                <span>Purchase Price</span>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <input type="number" class="form-control" placeholder="Purchase Price" asp-for="bookItem.purchasePrice">
                                                                <span class="label danger" asp-validation-for="bookItem.purchasePrice"></span>

                                                            </div>
                                                        </div>
                                                    </div>

                                                    <input type="hidden" asp-for="bookItem.bookItemId" />
                                                    <div class="col-md-8 offset-md-4">
                                                        <button type="submit" class="btn btn-primary mr-1 mb-1">Save</button>
                                                        <button type="reset" class="btn btn-outline-warning mr-1 mb-1">Reset</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
     
                        </div>
                 </section>
                <!-- // Basic Horizontal form layout section end -->


            </div>
        </div>
    </div>
    <!-- END: Content-->
