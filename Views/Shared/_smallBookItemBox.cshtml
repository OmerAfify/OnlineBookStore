
@model BookItem


    <div class="product-box product-wrap">
        <div class="img-wrapper">

            <div class="front">
                <a asp-controller="BookItem" asp-action="ItemDetails" asp-route-id="@Model.bookItemId" >
                    <img alt="" src="@string.Format("/UploadedFiles/Images/BookItemsImages/{0}",@Model.bookItemImageName)" class="img-fluid blur-up lazyload bg-img">
               
                </a>
            </div>
            <div class="back">
                <a asp-controller="BookItem" asp-action="ItemDetails" asp-route-id="@Model.bookItemId">
                    <img alt="" src="@string.Format("/UploadedFiles/Images/BookItemsImages/{0}",@Model.bookItemImageName)" class="img-fluid blur-up lazyload bg-img">
                </a>
            </div>
            <div class="cart-detail">
                <a href="javascript:void(0)" title="Add to Wishlist">
                    <i class="ti-heart" aria-hidden="true"></i>
                </a>
                <a href="#" data-toggle="modal" data-target="#quick-view" title="Quick View">
                    <i class="ti-search" aria-hidden="true"></i>
                </a>
                <a href="compare.html" title="Compare">
                    <i class="ti-reload" aria-hidden="true"></i>
                </a>
            </div>
        </div>
        <div class="product-info">
            <div class="rating"><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i></div>
            <a asp-controller="BookItem" asp-action="ItemDetails" asp-route-id="@Model.bookItemId">
                <h6>@Model.bookItemName</h6>
            </a>
            <h4>@Model.purchasePrice EGP </h4>
            <ul class="color-variant">
                <li class="bg-light0"></li>
                <li class="bg-light1"></li>
                <li class="bg-light2"></li>
            </ul>
            <div class="add-btn">
                @*<a href="javascript:void(0)" onclick="openCart()" class="btn btn-outline">*@
                <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.bookItemId" class="btn btn-outline">
                    <i class="ti-shopping-cart"></i> add to cart
                </a>
            </div>
        </div>
    </div>

