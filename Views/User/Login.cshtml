@model UserIdentityModel
    <!-- breadcrumb start -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-title">
                        <h2>customer's login</h2>
                    </div>
                </div>
                <div class="col-sm-6">
                    <nav aria-label="breadcrumb" class="theme-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">login</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb End -->
    <!--section start-->
    <section class="login-page section-b-space">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Login</h3>
                     <div class="theme-card">
                        <form class="theme-form" method="post" role="form" asp-controller="User" asp-action="Login">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input  style="margin:5px" type="text" asp-for="email" class="form-control" id="email" placeholder="Email" required="">
                                <span class="text-danger" asp-validation-for="email"></span>

                            </div>
                            <div class="form-group">
                                <label for="review">Password</label>
                                <input  style="margin:5px" type="password" class="form-control" id="review" asp-for="password"
                                       placeholder="Enter your password" required="">
                                <span class="text-danger" style="margin:5px" asp-validation-for="password"></span>

                            </div>
                            <div class="form-group">
                                Do not have an account?  <a asp-action="Register"><span style="color:khaki"> Create Account </span></a>

                            </div>

                            <input type="hidden" asp-for="returnUrl" />
                            <button class="btn btn-solid" type="submit">Login</button>
                        </form>
                    </div>
                </div>
           
            </div>
        </div>
    </section>
    <!--Section ends-->
  