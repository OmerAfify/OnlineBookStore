@model OrderDetailsAndShoppingCartViewModel


<!--breadcrumb start-->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>Check-out</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Check-out</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!--breadcrumb End-->
<!--section start-->
<section class="section-b-space">
    <div class="container">
        <div class="checkout-page">
            <div class="checkout-form">

                <form role="form" method="post" asp-controller="Order" asp-action="PlaceOrder">
                    <div class="row">
                        <div class="col-lg-6 col-sm-12 col-xs-12">
                            <div class="checkout-title">
                                <h3>Billing Details</h3>
                            </div>
                            <div class="row check-out">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="field-label">First Name</div>
                                    <input type="text" asp-for="orderDetails.firstName">   
                                    <span class="text-danger" asp-validation-for="orderDetails.firstName"></span>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="field-label">Last Name</div>
                                    <input type="text" asp-for="orderDetails.lastName">
                                    <span class="text-danger" asp-validation-for="orderDetails.lastName"></span>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="field-label">Phone</div>
                                    <input type="text" asp-for="orderDetails.phoneNumber">
                                    <span class="text-danger" asp-validation-for="orderDetails.phoneNumber"></span>
                                </div>

                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <div class="field-label">Country</div>
                                    <select asp-for="orderDetails.country">
                                        <option>Egypt</option>
                                        <option>Ksa</option>
                                        <option>United States</option>
                                        <option>Australia</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="orderDetails.country"></span>
                                </div>

                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <div class="field-label">Town/City</div>
                                    <input type="text" asp-for="orderDetails.city">
                                    <span class="text-danger" asp-validation-for="orderDetails.city"></span>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="field-label">Address</div>
                                    <input type="text" asp-for="orderDetails.address">

                                    <span class="text-danger" asp-validation-for="orderDetails.address"></span>
                                </div>
                                <div class="form-group col-md-12 col-sm-6 col-xs-12">
                                    <div class="field-label">Department Number</div>
                                    <input type="number" asp-for="orderDetails.departmentNo">

                                    <span class="text-danger" asp-validation-for="orderDetails.departmentNo"></span>
                                </div>
                              </div>
                        </div>
                        <div class="col-lg-6 col-sm-12 col-xs-12">
                            <div class="checkout-details">
                                <div class="order-box">
                                    <div class="title-box">
                                        <div>Product <span>Total</span></div>
                                    </div>
                                    <ul class="qty">

                                        @foreach (var item in Model.shoppingCart.cartItemList)
                                        {
                                            <li>@item.bookItem.bookItemName <span>@item.totalItemPrice</span></li>
                                        }
                                    </ul>

                                    <ul class="total quantity">
                                        <li>Total Quantity <span class="count">@Model.shoppingCart.totalShoppingCartQuantity </span></li>
                                        </ul>
                                    
                                    <ul class="total ">
                                        <li>Total <span class="count">@Model.shoppingCart.totalShoppingCartPrice EGP</span></li>
                                    </ul>
                                </div>
                                <div class="payment-box">
                                    <div class="upper-box">


                                        <!--here-->

                                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                            <div class="field-label">Payment Type</div>
                                            <select asp-for="orderDetails.payementType">
                                                <option>Cash on Delivery</option>
                                                <option>PayPal</option>
                                            </select>
                                            <span class="text-danger" asp-validation-for="orderDetails.payementType"></span>
                                        </div>


                                        <div class="radio-option paypal">

                                            <label for="payment-3">
                                                <span class="image">
                                                    <img src="../WebsiteAssets/images/paypal.png" alt="">
                                                </span>
                                            </label>
                                        </div>

                                    </div>
                                    <div class="text-right">
                                        <button type="submit" class="btn-solid btn">Place Order</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!--section end-->